#!/bin/bash

set -e

if [ -z "$HEROKU_EMBER_CLI_DEPLOY" ]; then
  echo "Not deploying because we are not on heroku."
else
  echo "deploying!"
  rm -rf tmp
  ember deploy production
  ember fastboot:build --environment=production --output-path=tmp/fastboot-dist
  rm -rf tmp/fastboot-dist/index.html
  cp tmp/deploy-dist/index.html tmp/fastboot-dist/index.html
  cd tmp/fastboot-dist && npm install
fi
